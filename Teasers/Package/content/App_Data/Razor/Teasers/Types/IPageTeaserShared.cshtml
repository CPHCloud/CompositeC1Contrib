@using System.Linq

@using CompositeC1Contrib.Teasers.Data.Types
@using CompositeC1Contrib.Teasers.Web.UI

@inherits BaseTeaserFunction<IPageTeaserShared>

@{
    var type = Type.GetType(Teaser.SharedTeaserType);
    var instance = DataFacade.GetData(type).Cast<ISharedTeaser>().SingleOrDefault(t => t.Id == Teaser.SharedTeaserId);
}

@if (instance != null)
{
    @Function("Teasers.Types." + instance.DataSourceId.InterfaceType.Name, new {Teaser = instance})
}