<cms:formdefinition xmlns:cms="http://www.composite.net/ns/management/bindingforms/1.0" xmlns="http://www.composite.net/ns/management/bindingforms/std.ui.controls.lib/1.0" xmlns:ff="http://www.composite.net/ns/management/bindingforms/std.function.lib/1.0" xmlns:f="http://www.composite.net/ns/function/1.0">
	<cms:bindings>
		<cms:binding name="HideAncestorTeasers" type="System.Boolean" optional="true" />
	</cms:bindings>
	
	<cms:layout>
		<FieldGroup>
			<CheckBox Label="${CompositeC1Contrib.Teasers, Settings.HideInheritedTeasers.Label}" Help="${CompositeC1Contrib.Teasers, Settings.HideInheritedTeasers.Help}">
				<CheckBox.Checked>
					<cms:bind source="HideAncestorTeasers" />
				</CheckBox.Checked>
			</CheckBox>
		</FieldGroup>
	</cms:layout>
</cms:formdefinition>